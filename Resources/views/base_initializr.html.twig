        {% javascripts
            '/bundles/pminitializr/js/libs/modernizr-2.5.3-respond-1.1.0.min.js'
            output='js/compiled/head.js'
            filter='?yui_js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock head_scripts %}
    {% endblock header %}
</head>
