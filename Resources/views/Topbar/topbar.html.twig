{% block topbar %}
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
    		<a class="brand" href="{{ path(topbar.titleRoute) }}">{{ topbar.title }}</a>
            <div class="nav-collapse">
                {{ topbar.leftmenu ? knp_menu_render(topbar.leftmenu) : '' }}
                {% if topbar.form %}
                    {% form_theme topbar.form _self %}
                        <form  class="navbar-search pull-left" method="post" action="{{ path(topbar.formRoute) }}">
                        {{ form_widget(topbar.form) }}
                        {% if topbar.buttonValue %}
                        	<input class="btn primary" value="{{ topbar.buttonValue }}" type="submit">
                        {% endif %}
                    </form>
                {% endif %}
                {{ topbar.rightmenu ? knp_menu_render(topbar.rightmenu) : '' }}
            </div>

		</div>
	</div>
</div>
{% endblock %}

{% block form_widget %}
{{ block('field_rows') }}
{% endblock %}

{% block field_row %}
{{ form_widget(form) }}
{% endblock field_row %}
