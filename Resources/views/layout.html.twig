      <div class="content">
        <div class="page-header">
              <h1>{% block headline %}Mopa Bootstap Bundle{% endblock %}</h1>
        </div>
		{% block flashes %}
		    {{ session_flash() }}
		{% endblock  %}
		<div class="row">
			{% block content %}
			<div class="span12">
				<strong>Hier k√∂nnte Ihre Werbung stehen ... </strong>
			</div>
			<div class="span4">
				{% block content_sidebar %}

				{% endblock %}
			</div>
			{% endblock  %}
		</div>
      </div>

      <footer>
        <p>&copy; <a href="http://www.mohrenweiserpartner.de" target="_blank">Mohrenweiser & Partner</a> 2011</p>
      </footer>
	</div>
	{% block foot_script %}
	{% endblock %}
